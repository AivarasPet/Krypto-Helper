<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:background"
    tools:ignore="ExtraText">
    getResources().getColor(R.color)
    getResources().getString(R.string)

    <TextView
        android:id="@+id/options"
        android:textColor="?android:textColor"
        android:layout_width="261dp"
        android:layout_height="76dp"
        android:layout_marginEnd="148dp"
        android:layout_marginTop="30dp"
        android:inputType="text"
        android:text="@string/logo_name_1"
        android:textAlignment="center"
        android:textSize="50sp"
        android:background="@color/colorTransparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/helper"
        android:layout_width="261dp"
        android:layout_height="76dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="74dp"
        android:inputType="text"
        android:text="@string/logo_name_2"
        android:background="@color/colorTransparent"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo-background"
        android:layout_width="479dp"
        android:layout_height="117dp"
        android:layout_marginTop="30dp"
        android:elevation="-3dp"
        android:background="@color/colorTransparent"
        app:layout_constraintEnd_toStartOf="@+id/helper"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/options"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/graph-logo"
        android:layout_width="115dp"
        android:layout_height="123dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="false"
        android:clickable="false"
        android:elevation="3dp"
        android:background="@color/colorTransparent"
        app:layout_constraintBottom_toBottomOf="@+id/graphBut"
        app:layout_constraintEnd_toEndOf="@+id/graphBut"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/graphBut"
        app:layout_constraintTop_toTopOf="@+id/graphBut"
        app:srcCompat="@drawable/ic_graph_logo" />

    <ImageView
        android:id="@+id/money-logo"
        android:layout_width="116dp"
        android:layout_height="123dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:clickable="false"
        android:elevation="3dp"
        android:background="@color/colorTransparent"
        app:layout_constraintBottom_toBottomOf="@+id/moneyBut"
        app:layout_constraintEnd_toEndOf="@+id/moneyBut"
        app:layout_constraintStart_toStartOf="@+id/moneyBut"
        app:layout_constraintTop_toTopOf="@+id/moneyBut"
        app:srcCompat="@drawable/ic_monetization_on_black_24dp" />

    <Button
        android:id="@+id/graphBut"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="10dp"
        android:background="?android:colorAccent"
        android:fontFamily="serif-monospace"
        android:gravity="bottom|center_horizontal"
        android:text="@string/graph_name"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/moneyBut"
        app:layout_constraintTop_toTopOf="@+id/moneyBut" />

    <Button
        android:id="@+id/moneyBut"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:background="?android:colorAccent"
        android:fontFamily="serif-monospace"
        android:gravity="bottom|center_horizontal"
        android:text="@string/money_name"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toStartOf="@+id/graphBut"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo-background" />

    <Button
        android:id="@+id/newsBut"
        android:layout_width="320dp"
        android:layout_height="92dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:background="?android:colorAccent"
        android:fontFamily="serif-monospace"
        android:gravity="bottom|center_horizontal"
        android:text="@string/news_name"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moneyBut" />

    <Button
        android:id="@+id/optionsBut"
        android:layout_width="208dp"
        android:layout_height="92dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:background="?android:colorAccent"
        android:fontFamily="serif-monospace"
        android:gravity="bottom|center_horizontal"
        android:text="@string/options_name"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toStartOf="@+id/infoBut"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newsBut" />

    <Button
        android:id="@+id/infoBut"
        android:layout_width="90dp"
        android:layout_height="91dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="?android:colorAccent"
        android:fontFamily="serif-monospace"
        android:gravity="bottom|center_horizontal"
        android:text="@string/info_name"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/optionsBut"
        app:layout_constraintTop_toBottomOf="@+id/newsBut" />

    <TextView
        android:id="@+id/Version"
        android:layout_width="246dp"
        android:layout_height="20dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:fontFamily="serif-monospace"
        android:text="@string/version"
        android:textColor="?android:textColor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/optionsBut"
        app:layout_constraintVertical_bias="0.583" />

</android.support.constraint.ConstraintLayout>